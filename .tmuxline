# This tmux statusbar config was created by tmuxline.vim
# on Sun, 02 May 2021

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=#eeffff,bg=#545454"
set -g status-right-style "none"
set -g pane-active-border-style "fg=#c3e88d"
set -g status-style "none,bg=#171717"
set -g message-style "fg=#eeffff,bg=#545454"
set -g pane-border-style "fg=#545454"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=#eeffff,bg=#171717"
set -g status-left "#[fg=#171717,bg=#c3e88d,none] #S #[fg=#c3e88d,bg=#171717,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=#545454,bg=#171717,nobold,nounderscore,noitalics]#[fg=#eeffff,bg=#545454] %Y-%m-%d  %H:%M #[fg=#c3e88d,bg=#545454,nobold,nounderscore,noitalics]#[fg=#171717,bg=#c3e88d] #h "
setw -g window-status-format "#[fg=#eeffff,bg=#171717] #I #[fg=#eeffff,bg=#171717] #W "
setw -g window-status-current-format "#[fg=#171717,bg=#545454,nobold,nounderscore,noitalics]#[fg=#eeffff,bg=#545454,none] #I #[fg=#eeffff,bg=#545454,none] #W #[fg=#545454,bg=#171717,nobold,nounderscore,noitalics]"
